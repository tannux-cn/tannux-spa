<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="
		http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
		http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	<!-- 系统属性配置 -->
	<bean id="tannux.framework.variable" class="com.tannux.framework.tannux.TannuxSpringPlaceholderVariable" >
		<constructor-arg>
			<bean class="com.tannux.core.cm.support.PropertiesVariable">
				<constructor-arg>
					<array>
						<value>classpath:project.properties</value>
					</array>
				</constructor-arg>
			</bean>
		</constructor-arg>
	</bean>
	
	
	<import resource="classpath:spring/tannux-demo-spa-server.xml" />
	
	<bean id="tannux.framework.configuration" class="com.tannux.framework.tannux.TannuxFrameworkConfiguration" >
		<constructor-arg name="variable" ref="tannux.framework.variable" />
		<constructor-arg name="dictionary" >
			<bean class="com.tannux.core.cm.support.ResourceDictionary" >
				<constructor-arg value="classpath:dictionary.json" />
			</bean>
		</constructor-arg>
		
		<!-- 每隔5分钟重新刷新配置 -->
		<constructor-arg name="openReload" value="true" />
		<constructor-arg name="reloadIntervalTime" value="300" />
	</bean>
	
	
	<!-- Framework集成Spring配置环境-->
	<bean class="com.tannux.framework.context.support.TannuxIntegrationSpringContext" >
		<!-- 系统参数配置 -->
		<property name="configuration" ref="tannux.framework.configuration" />
		
		<!-- Compass组件 -->
		<property name="compassManager">
			<bean class="com.tannux.framework.tannux.TannuxCompassManager" >
				<property name="locations">
					<array>
						<value>com.tannux.demo.spa.server.**</value>
					</array>
				</property>
			</bean>
		</property>
		
		
		<property name="applicationListeners">
			<array>
				<bean class="com.tannux.demo.spa.server.ApplicationInitialization" />
			</array>
		</property>
	</bean>
	
	
	
</beans>
